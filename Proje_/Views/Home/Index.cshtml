    ViewBag.Title = "Home Page";
}

<head>
    <title>Kullanıcı Girişi</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/png" href="~/Scripts/Tema/ScriptTema/images/icons/favicon.ico" />

    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/vendor/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/fonts/font-awesome-4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/vendor/animate/animate.css">

    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/vendor/css-hamburgers/hamburgers.min.css">

    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/vendor/animsition/css/animsition.min.css">

    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/vendor/select2/select2.min.css">

    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/vendor/daterangepicker/daterangepicker.css">

    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/Tema/ScriptTema/css/main.css">

</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {


                    @*<form class="login100-form validate-form" method="post">*@
                    <span class="login100-form-title p-b-26">
                        Hoşgeldiniz
                    </span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-font"></i>
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Kullanıcı Adını Kontrol Ediniz">
                        <input class="input100" type="text" name="admin_name">
                        <span class="focus-input100" data-placeholder="Kullanıcı Adı"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Şifrenizi Kontrol ediniz">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input class="input100" type="password" name="password">
                        <span class="focus-input100" data-placeholder="Şifre"></span>
                    </div>


                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Giriş
                            </button>
                        </div>
                    </div>
                    <div class="container-login100-form-btn">
                        @*@if (ViewBag.hata != null)
                            {
                                <p class="text-danger">@ViewBag.hata</p>
                            }*@
                        <p>  @ViewBag.LoginError</p>

                    </div>
                }
                @*</form>*@
            </div>
        </div>
    </div>




    <script src="~/Scripts/Tema/ScriptTema/vendor/jquery/jquery-3.2.1.min.js"></script>

    <script src="~/Scripts/Tema/ScriptTema/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Tema/ScriptTema/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Scripts/Tema/ScriptTema/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Scripts/Tema/ScriptTema/vendor/select2/select2.min.js"></script>

    <script src="~/Scripts/Tema/ScriptTema/vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>

    <script src="~/Scripts/Tema/ScriptTema/vendor/countdowntime/countdowntime.js"></script>

    <script src="~/Scripts/Tema/ScriptTema/js/main.js"></script>

</body>
